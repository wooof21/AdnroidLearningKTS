<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the drawer is open (activated) -->
    <item android:state_activated="true"
        android:drawable="@drawable/ic_menu_icon_open" /> <!-- Replace with your arrow icon -->

    <!-- Default state (drawer closed) -->
    <item android:drawable="@drawable/ic_menu_icon_close" /> <!-- Replace with your hamburger icon -->
</selector>