<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lottery_bg2"
    tools:context=".lottery.NumberResultActivity">

    <TextView
        android:id="@+id/lottery_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lottery Numbers"
        android:layout_marginTop="50dp"
        android:textColor="#5A05F7"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lottery_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 0 0 0 0 0 "
        android:textColor="#D400F4"
        android:textSize="26sp"
        android:layout_marginTop="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottery_title" />

    <Button
        android:id="@+id/lottery_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Numbers"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottery_nums" />

</androidx.constraintlayout.widget.ConstraintLayout>